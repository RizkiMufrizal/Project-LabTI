<%- model_class = User -%>
<div class="page-header">
    <h1>Data User</h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.tambah")),
            new_user_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:email) %></th>
            <th><%= model_class.human_attribute_name(:password_hash) %></th>
            <th><%= model_class.human_attribute_name(:password_salt) %></th>
            <th><%= model_class.human_attribute_name(:enable) %></th>
            <th><%= model_class.human_attribute_name(:role) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= user.password_hash %></td>
            <td><%= user.password_salt %></td>
            <td><%= user.enable %></td>
            <td><%= user.role %></td>
            <td>
                <%= link_to t('.destroy', :default => t("helpers.links.Hapus")), user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Anda ingin menghapus data ?')) }, :class => 'btn
                btn-danger' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
