<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

<% if @student.errors.any? %>
<div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %>
            prohibited this student from being saved:</h3>
    </div>
    <div class="panel-body">
        <ul>
            <% @student.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>

<% if @student.npm %>
<div class="form-group">
    <%= f.label :npm, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :npm, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:npm) %>
</div>
<% else %>
<div class="form-group">
    <%= f.label :npm, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :npm, :class => 'form-control' %>
    </div>
    <%=f.error_span(:npm) %>
</div>
<% end %>

<div class="form-group">
    <%= f.label :nama, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
</div>
<div class="form-group">
    <%= f.label :kelas, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :class_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:class_name) %>
</div>
<div class="form-group">
    <%= f.label :jenis_kelamin, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :gender, :class => 'form-control' %>
    </div>
    <%=f.error_span(:gender) %>
</div>
<div class="form-group">
    <%= f.label :alamat, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
</div>

<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">

        <% if @student.npm %>
        <%= f.submit :update, :class => 'btn btn-update' %>
    <% else %>
        <%= f.submit :simpan, :class => 'btn btn-primary' %>
        <% end %>

        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
</div>

<% end %>
