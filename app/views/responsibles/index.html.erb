<%- model_class = Responsible -%>
<div class="page-header">
    <h1>Data Asisten</h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.Tambah")),
            new_responsible_path,
            :class => 'btn btn-primary' %>
<table class="table table-striped">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:id_asisten) %></th>
            <th><%= model_class.human_attribute_name(:nama) %></th>
            <th><%= model_class.human_attribute_name(:no_telpon) %></th>
            <th><%=t '.actions', :default => t("helpers.Aksi") %></th>
        </tr>
    </thead>
    <tbody>
        <% @responsibles.each do |responsible| %>
        <tr>
            <td><%= responsible.id_assistant %></td>
            <td><%= responsible.name %></td>
            <td><%= responsible.phone %></td>
            <td>
                <%= link_to t('.edit', :default => t("helpers.links.Edit")),
                      edit_responsible_path(responsible), :class => 'btn btn-success' %>
                <%= link_to t('.destroy', :default => t("helpers.links.Hapus")), responsible_path(responsible), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Anda ingin menghapus data ?')) }, :class =>
                'btn btn-danger' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
