<%= form_for @responsible, :html => { :class => "form-horizontal responsible" } do |f| %>

<% if @responsible.errors.any? %>
<div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@responsible.errors.count, "error") %>
            prohibited this responsible from being saved:</h3>
    </div>
    <div class="panel-body">
        <ul>
            <% @responsible.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>

<% if @responsible.id_assistant %>
<div class="form-group">
    <%= f.label :id_asisten, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :id_assistant, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:id_assistant) %>
</div>
<% end %>

<div class="form-group">
    <%= f.label :nama, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
</div>
<div class="form-group">
    <%= f.label :no_telpon, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone) %>
</div>

<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
        <% if @responsible.id_assistant %>
        <%= f.submit :update, :class => 'btn btn-success' %>
    <% else %>
        <%= f.submit :simpan, :class => 'btn btn-primary' %>
        <% end %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                responsibles_path, :class => 'btn btn-default' %>
    </div>
</div>

<% end %>
