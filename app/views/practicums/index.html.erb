<%- model_class = Practicum -%>
<div class="page-header">
    <h1>Data Praktikum</h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.Tambah")),
            new_practicum_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th class="text-center"><%= model_class.human_attribute_name(:id_praktikum) %></th>
            <th class="text-center"><%= model_class.human_attribute_name(:nama_praktikum) %></th>
            <th class="text-center"><%=t '.actions', :default => t("helpers.Aksi") %></th>
        </tr>
    </thead>
    <tbody>
        <% @practicums.each do |practicum| %>
        <tr>
            <td class="text-center"><%= practicum.id_practicum %></td>
            <td class="text-center"><%= practicum.practicum_name %></td>
            <td class="text-center">
                <%= link_to t('.edit', :default => t("helpers.links.Edit")),
                      edit_practicum_path(practicum), :class => 'btn btn-success' %>
                <%= link_to t('.destroy', :default => t("helpers.links.Hapus")), practicum_path(practicum), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Anda ingin menghapus data ?')) }, :class => 'btn
                btn-danger' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
